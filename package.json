    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.27.2",
    "drizzle-zod": "^0.4.4",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
